@page "/EditTicket/{Id}"
@using Coursework.Data
@inject Coursework.Data.Ticket.TicketService ticketService
@inject NavigationManager NavigationManager

<h2>Edit Ticket</h2>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Name" class="control-label">Description</label>
                <input form="Name" class="form-control" @bind="@obj.Description" />
            </div>

            <div class="form-group">
                <label for="City" class="control-label">Owner</label>
                <input form="City" class="form-control" @bind="@obj.Assignee" />
            </div>

            <div class="form-group">
                <label for="City" class="control-label">Status</label>
                <select @bind="@obj.Status" class="form-control">
                    <option value="0" selected></option>
                    <option value="New">New</option>
                    <option value="In-progress">In-progress</option>
                    <option value="Closed">Closed</option>
                    <option value="Test">Test</option>


                </select>
            </div>

            <div class="form-group">
                <label for="City" class="control-label">Due Date</label>
                <input type="date" class="form-control" @bind="@obj.DueDate" />
            </div>

            <div class="form-group">
                <input form="City" type="hidden" class="form-control" @bind="@obj.ProjectId" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@UpdateEmployee" value="Update" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public String Id { get; set; }
    Coursework.Data.Ticket.Ticket obj = new Coursework.Data.Ticket.Ticket();
    protected override async Task OnInitializedAsync()
    {
        obj = await Task.Run(() => ticketService.GetEmployeeAsync(Convert.ToInt32(Id)));
    }
    protected async void UpdateEmployee()
    {
        await ticketService.UpdateTicket(obj);
        NavigationManager.NavigateTo($"/Dash/{obj.ProjectId}");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("");
    }
}
